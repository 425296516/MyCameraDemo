<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="26dp"
    android:layout_marginRight="26dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/drw_1_juxing_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_confirm_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:gravity="center"
            android:padding="7dp"
            android:text="结束提示"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bebebe" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 最下面的按钮 -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:layout_weight="1"
                android:scrollbars="none">
                <TextView
                    android:id="@+id/text_view_confirm_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:overScrollMode="always"
                    android:text="@string/user_protocol"
                    android:textSize="13sp" />
            </ScrollView>

            <!-- 线 -->
            <ImageView
                android:id="@+id/divide_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d9d9d9" />

            <Button
                android:id="@+id/button_confirm_positive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/drw_1_juxing_white"
                android:text="了解"
                android:textColor="@color/apptheme_color"
                android:textSize="16sp" />
        </LinearLayout>
        <!-- 内容部分-->
    </LinearLayout>
</LinearLayout>

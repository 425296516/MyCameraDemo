<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="180dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="提示"
            android:id="@+id/text_view_confirm_title"
            android:textSize="20sp"
            android:textColor="@color/black"
             />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d9d9d9" />

        <TextView
            android:padding="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="是否保存本次修改？"
            android:textColor="@color/black"
            android:id="@+id/text_view_confirm_content"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d9d9d9" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#888"
            android:dividerPadding="1px"
            android:orientation="horizontal"
            android:gravity="center"
            android:showDividers="middle">

            <TextView
                android:id="@+id/button_confirm_negative"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/black"
                android:background="@drawable/button_selector"
                 />
            <ImageView
                android:layout_width="1dp"

                android:layout_height="match_parent"
                android:background="#d9d9d9" />

            <TextView
                android:id="@+id/button_confirm_positive"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/confirm"
                android:background="@drawable/button_selector"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout><!-- From: file:/Users/gaoyf/Dev/workspace/mywork/share_mods/android/UserModule/app/src/main/res/layout/dlg_positive_negative.xml -->